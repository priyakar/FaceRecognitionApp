<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.facerecog.shahmalav.facerecognitionapp" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/spacegoat"
        android:label="FaceRecognitionApp"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.facerecog.shahmalav.facerecognitionapp.Splash"
            android:label="FaceRecognitionApp" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.facerecog.shahmalav.facerecognitionapp.MainActivity"
            android:label="FaceRecognitionApp" >
        </activity>
        <activity
            android:name=".ResultMatch"
            android:label="FaceRecognitionApp" >
        </activity>

    </application>

</manifest>
